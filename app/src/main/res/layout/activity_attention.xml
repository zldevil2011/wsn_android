<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newly_dawn.app.wsn_android.user.Attention"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.newly_dawn.app.wsn_android.user.Attention"
        android:background="#055b8c"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@drawable/sunny"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/air_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="北京"
                android:textSize="36sp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/air_WeaTem"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="晴 22℃"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/round_btn_orange"
                android:textSize="16dp"
                />
        </LinearLayout>
        <lecho.lib.hellocharts.view.LineChartView
            android:background="#123456"
            android:id="@+id/line_chart_view"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/aqi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#033e78"
                android:text = "AQI:255"
                android:padding="@dimen/weather_info_padding"
                android:textSize="@dimen/weather_info_textSize"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/weather_info_textColor"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll"
                android:background="@android:color/black" />
            <TextView
                android:id="@+id/humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#033e78"
                android:padding="@dimen/weather_info_padding"
                android:textSize="@dimen/weather_info_textSize"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/weather_info_textColor"
                android:text = "湿度:255"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll"
                android:background="@android:color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cloud_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#033e78"
                android:text = "风速:255"
                android:padding="@dimen/weather_info_padding"
                android:textSize="@dimen/weather_info_textSize"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/weather_info_textColor"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll"
                android:background="@android:color/black" />
            <TextView
                android:id="@+id/weatherType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#033e78"
                android:padding="@dimen/weather_info_padding"
                android:textSize="@dimen/weather_info_textSize"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/weather_info_textColor"
                android:text = "雷正雨转阴"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/arrow_left_24"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="#50668f"
                android:text="前一个"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_right_24"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="#50668f"
                android:text="后一个"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

